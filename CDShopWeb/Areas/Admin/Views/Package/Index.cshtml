@model IEnumerable<CDShop.Models.Package>
@{
    ViewData["Title"] = "Index";
}

<div class="container" p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Packages List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Package" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Package
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Package Name
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="75%" class="pt-4">
                        @obj.Name
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Package" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">Edit</a>
                            <a asp-controller="Package" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>